environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
}

node('jenkins-slave') {
    stage('clone git') {
        git branch: 'main', url: 'https://github.com/radiolacattor/for_harness.git'
    }

    stage('build') {

        dir ('.') {
                sh 'docker build -t radiolacattor/nginx_for_harness:v1 .'
        }
    }

    stage('login') {
        sh 'docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
    }

    stage('image push') {
        sh 'docker push radiolacattor/nginx_for_harness:v1'
    }
}
