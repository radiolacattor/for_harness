environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
}

node('jenkins-slave') {
    stage('clone git') {
        git branch: 'main', url: 'https://github.com/radiolacattor/for_harness.git'
    }

    stage('build') {
        dockerImage = docker.build("radiolacattor/nginx_for_harness:v1")
    }

    stage('login') {
        docker.withRegistry('https://hub.docker.com/', 'DOCKERHUB_CREDENTIALS') {
      dockerImage.push()
    }

    stage('image push') {
        sh 'docker push radiolacattor/nginx_for_harness:v1'
    }
}
